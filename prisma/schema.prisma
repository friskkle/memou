generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime? @db.Timestamptz(6)
  refreshTokenExpiresAt DateTime? @db.Timestamptz(6)
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt             DateTime  @db.Timestamptz(6)
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model journal_entries {
  id            Int      @id @default(autoincrement())
  journal_id    Int
  title         String?  @db.VarChar(64)
  content       String?
  created_date  DateTime @db.Date
  last_modified DateTime @db.Timestamp(6)
  editors       String[]
  creator       String
  journals      journals @relation(fields: [journal_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "journal_ref")
  user          user     @relation(fields: [creator], references: [id], onDelete: NoAction, map: "user_id")
}

model journals {
  id              Int               @id @default(autoincrement())
  uuid            String
  title           String?           @db.VarChar(64)
  shared_with     String[]
  journal_entries journal_entries[]
  user            user              @relation(fields: [uuid], references: [id], onDelete: NoAction, map: "user_id")
}

model session {
  id        String   @id
  expiresAt DateTime @db.Timestamptz(6)
  token     String   @unique
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @db.Timestamptz(6)
  ipAddress String?
  userAgent String?
  userId    String
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model user {
  id              String            @id
  name            String
  email           String            @unique
  emailVerified   Boolean
  image           String?
  createdAt       DateTime          @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime          @default(now()) @db.Timestamptz(6)
  account         account[]
  journal_entries journal_entries[]
  journals        journals[]
  session         session[]
}

model users {
  uuid         Int     @id @default(autoincrement())
  username     String?
  display_name String?
}

model verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime @db.Timestamptz(6)
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @default(now()) @db.Timestamptz(6)
}
